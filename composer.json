{
    "name": "slim/slim-architecture",
    "description": "Architecture des Web Services avec Slim",
    "authors": [
        {
            "name": "Almoustapha Abdourahamane",
            "email": "almoustapha.abdou@2isoft.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "illuminate/database": "^7.30",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7",
        "selective/basepath": "^2.0"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^0.8.1",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^0.12.80"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:3030 -t public"
    }
}
